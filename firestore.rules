rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow all reads and writes for development
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Specific rules for each collection
    match /users/{userId} {
      allow read, write: if true;
    }
    
    match /news/{newsId} {
      allow read, write: if true;
    }
    
    match /forum_posts/{postId} {
      allow read, write: if true;
    }
  }
}
